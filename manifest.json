{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.1",
  "description": "Blocks malicious and phishing websites in real-time. Includes whitelist/blacklist.",
  "permissions": ["tabs", "storage", "webRequest", "webRequestBlocking"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
